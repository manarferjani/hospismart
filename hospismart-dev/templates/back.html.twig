<script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- M√©decin bell (existant) ---
        const bell = document.getElementById('bellBtn');
        const box = document.getElementById('notifBox');
        if (bell && box) {
            bell.addEventListener('click', (e) => {
                e.stopPropagation();
                box.classList.toggle('active');
            });
            document.addEventListener('click', () => box.classList.remove('active'));
        }

        // --- Admin Notifications en temps r√©el ---
        const adminBell = document.getElementById('adminBellBtn');
        const adminBox = document.getElementById('adminNotifBox');
        const adminBadge = document.getElementById('adminBellBadge');
        const adminList = document.getElementById('adminNotifList');
        const markAllBtn = document.getElementById('adminMarkAllRead');
        const toast = document.getElementById('adminNotifToast');

        if (adminBell && adminBox) {
            let lastNotifId = 0;
            let isFirstPoll = true;

            // Toggle dropdown
            adminBell.addEventListener('click', (e) => {
                e.stopPropagation();
                adminBox.classList.toggle('active');
                if (adminBox.classList.contains('active')) {
                    loadLatestNotifs();
                }
            });
            document.addEventListener('click', (e) => {
                if (!adminBox.contains(e.target)) adminBox.classList.remove('active');
            });

            // Mark all read
            if (markAllBtn) {
                markAllBtn.addEventListener('click', async (e) => {
                    e.stopPropagation();
                    await fetch('/api/notifications/mark-read', { method: 'POST' });
                    updateBadge(0);
                    document.querySelectorAll('.notif-item.unread').forEach(el => el.classList.remove('unread'));
                });
            }

            function updateBadge(count) {
                if (count > 0) {
                    adminBadge.textContent = count > 99 ? '99+' : count;
                    adminBadge.style.display = 'inline-block';
                } else {
                    adminBadge.style.display = 'none';
                }
            }

            function showToast(notif) {
                const toastTitle = document.getElementById('toastTitle');
                const toastBody = document.getElementById('toastBody');
                if (toastTitle) toastTitle.textContent = 'üì© Nouvelle notification';
                if (toastBody) toastBody.textContent = notif.content;
                toast.classList.add('show');
                // Shake bell
                adminBell.querySelector('i').classList.add('bell-animate');
                setTimeout(() => adminBell.querySelector('i').classList.remove('bell-animate'), 700);
                // Auto-hide toast
                setTimeout(() => toast.classList.remove('show'), 5000);
            }

            function renderNotifItem(n) {
                const iconClass = n.type === 'reclamation' ? 'reclamation' : 'info';
                const icon = n.type === 'reclamation' ? 'fa-file-medical' : 'fa-info-circle';
                const unread = n.isRead ? '' : 'unread';
                const link = n.linkUrl || '#';
                return `<a href="${link}" class="notif-item ${unread}">
                    <div class="d-flex align-items-start gap-2">
                        <div class="notif-icon ${iconClass}"><i class="fa-solid ${icon}"></i></div>
                        <div class="flex-grow-1">
                            <div class="notif-text">${n.content}</div>
                            <div class="notif-time">${n.createdAt}</div>
                        </div>
                    </div>
                </a>`;
            }

            async function loadLatestNotifs() {
                try {
                    const res = await fetch('/api/notifications/latest');
                    const data = await res.json();
                    updateBadge(data.unreadCount);
                    if (data.notifications.length === 0) {
                        adminList.innerHTML = '<div class="notif-empty"><i class="fa-solid fa-check-circle fs-3 d-block mb-2"></i>Aucune notification</div>';
                    } else {
                        adminList.innerHTML = data.notifications.map(renderNotifItem).join('');
                    }
                } catch(e) { console.error('Notif load error', e); }
            }

            async function pollNotifs() {
                try {
                    const res = await fetch(`/api/notifications/poll?since=${lastNotifId}`);
                    const data = await res.json();
                    updateBadge(data.unreadCount);
                    if (data.notifications.length > 0) {
                        // Update lastNotifId
                        data.notifications.forEach(n => {
                            if (n.id > lastNotifId) lastNotifId = n.id;
                        });
                        if (!isFirstPoll) {
                            // Show toast for new notifications
                            showToast(data.notifications[0]);
                            // Play sound
                            try { new Audio('data:audio/wav;base64,').play(); } catch(e) {}
                        }
                    }
                    isFirstPoll = false;
                } catch(e) { console.error('Poll error', e); }
            }

            // Initial load + start polling
            loadLatestNotifs();
            setInterval(pollNotifs, 8000); // Poll every 8 seconds
        }
    });
</script>
