{% extends 'back.html.twig' %}

{% block title %}Gestion des Médecins{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 fw-bold"><i class="fas fa-user-md text-primary me-2"></i> Médecins</h1>
            <p class="text-muted small mb-0">Liste de tous les médecins enregistrés</p>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div>
            <a href="{{ path('app_admin_medecin_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Médecin
            </a>
        </div>
        {% endif %}
    </div>

    {% if medecins %}
        <div class="card shadow-sm border-0" style="border-radius: 15px;">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Médecin</th>
                                <th>Spécialité</th>
                                <th>Matricule</th>
                                <th>Téléphone</th>
                                <th>Email</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for medecin in medecins %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name={{ medecin.prenom }}+{{ medecin.nom }}&background=0d6efd&color=fff&size=40"
                                             class="rounded-circle me-3" style="width:40px;height:40px;">
                                        <div>
                                            <div class="fw-semibold">Dr. {{ medecin.prenom }} {{ medecin.nom }}</div>
                                            <small class="text-muted">{{ medecin.email }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary">{{ medecin.specialite|default('—') }}</span>
                                </td>
                                <td>{{ medecin.matricule|default('—') }}</td>
                                <td>{{ medecin.telephone|default('—') }}</td>
                                <td>{{ medecin.email }}</td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_medecin_show', {'id': medecin.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_admin_medecin_edit', {'id': medecin.id}) }}" class="btn btn-sm btn-outline-warning me-1" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_medecin_delete', {'id': medecin.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ce médecin ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medecin.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card border-0 shadow-sm text-center py-5" style="border-radius:15px;">
            <div class="card-body">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucun médecin enregistré</h5>
                <p class="text-muted small">Les médecins s'inscrivent via le formulaire d'inscription.</p>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
