{% extends 'back.html.twig' %}

{% block title %}Modifier le médecin{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0 fw-bold"><i class="fas fa-user-edit text-warning me-2"></i> Modifier le médecin</h1>
            <p class="text-muted small mb-0">Modifier les informations du médecin</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_medecin_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 15px;">
        <div class="card-header py-3 bg-white border-bottom">
            <h6 class="m-0 fw-bold text-warning"><i class="fas fa-edit me-2"></i> Informations du médecin</h6>
        </div>
        <div class="card-body p-4">
            {{ include('medecin/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
        </div>
    </div>
</div>
{% endblock %}
