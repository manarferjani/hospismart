{% extends 'front.html.twig' %}

{% block title %}Profil du Dr. {{ medecin.user.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="border-radius: 25px; overflow: hidden;">
                {# Header de couleur avec effet dégradé #}
                <div style="height: 120px; background: linear-gradient(135deg, #0d6efd 0%, #4178F5 100%);"></div>
                
                <div class="card-body px-5 pb-5 pt-0 text-center">
                    {# Photo de profil centrée à cheval sur le header #}
{# Photo de profil centrée à cheval sur le header #}
<div class="position-relative" style="margin-top: -85px;"> {# On augmente le retrait négatif car l'image est plus grande #}
    <img src="https://ui-avatars.com/api/?name=Dr+{{ medecin.user.prenom }}+{{ medecin.user.nom }}&background=f8f9fa&color=0d6efd&size=200&bold=true" 
         class="rounded-circle border border-4 border-white shadow" 
         style="width: 160px; height: 160px; object-fit: cover;" 
         alt="Photo du médecin">
</div>

                    <h2 class="mt-3 fw-bold" style="color: #1a1a2e;">
                        Dr. {{ medecin.user.nom }} {{ medecin.user.prenom }}
                    </h2>
                    <span class="badge bg-soft-primary px-3 py-2 text-primary mb-4" 
                          style="background-color: rgba(13, 110, 253, 0.1); border-radius: 10px; font-size: 0.9rem;">
                        <i class="fas fa-stethoscope me-2"></i>{{ medecin.specialite }}
                    </span>

                    <div class="row text-center mb-5 mt-2">
                        <div class="col">
                            <p class="text-muted small mb-1">Email professionnel</p>
                            <p class="fw-bold mb-0 text-dark">{{ medecin.user.email }}</p>
                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <div class="text-start">
                        <h5 class="fw-bold mb-3" style="color: #1a1a2e;">À propos de ce praticien</h5>
                        <p class="text-muted leading-relaxed">
                            Le Dr. {{ medecin.user.nom }} est un spécialiste en <strong>{{ medecin.specialite }}</strong> 
                            dévoué à fournir les meilleurs soins possibles à ses patients au sein de Hospismart. 
                            Fort de son expertise, il vous accompagne dans votre parcours de soin avec écoute et professionnalisme.
                        </p>
                    </div>

                    <div class="mt-5 d-flex gap-3 justify-content-center">
                        <a href="{{ path('app_medecin_recherche') }}" class="btn btn-light px-4" style="border-radius: 12px; font-weight: 600;">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <a href="{{ path('app_rendezvous_dispo', {'id': medecin.id}) }}" class="btn btn-primary px-5 shadow-sm" 
                           style="border-radius: 12px; font-weight: 600; background: #0d6efd;">
                            Prendre Rendez-vous
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}