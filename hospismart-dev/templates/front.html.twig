{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/front.css') }}">
<style>
    :root {
        --primary-color: #0d6efd;
        --hover-color: #4178F5;
    }
    .navbar { background: rgba(255,255,255,0.92) !important; padding: 20px 0; position: fixed; top: 0; left: 0; right: 0; width: 100%; z-index: 9999; backdrop-filter: blur(18px); box-shadow: 0 18px 45px rgba(15,23,42,0.12); pointer-events: auto !important; }
    .navbar * { pointer-events: auto !important; }
    .navbar a, .navbar button, .navbar .nav-link { pointer-events: auto !important; cursor: pointer !important; position: relative !important; z-index: 999999 !important; }
    
    /* Style des liens avec animation de soulignement */
    .nav-link { 
        color: #555 !important; 
        font-weight: 500; 
        margin: 0 10px; 
        transition: all 0.3s ease;
        border-bottom: 2px solid transparent;
    }

    .nav-link:hover { 
        color: var(--hover-color) !important; 
        transform: translateY(-2px);
    }

    .nav-link.active { 
        color: var(--primary-color) !important; 
        font-weight: 700;
        border-bottom: 2px solid var(--primary-color);
    }

    .btn-logout { 
        background-color: white; color: var(--primary-color); 
        border: 2px solid var(--primary-color); border-radius: 50px; 
        padding: 8px 20px; font-weight: 600; text-decoration: none; transition: 0.3s;
    }
    .btn-logout:hover { background-color: var(--primary-color); color: white; }

    .notification-bell { color: #555; transition: color 0.3s ease; cursor: pointer; }
    .notification-bell:hover { color: var(--primary-color); }
    
    .dropdown-menu { border-radius: 15px; border: none; }
    .footer-oasis { border-top: 1px solid #dee2e6; padding: 2rem 0; margin-top: 3rem; color: #6c757d; font-size: 0.875rem; }

    /* Isolate main content so sticky/positioned children never overlap the navbar */
    main.container { isolation: isolate; position: relative; z-index: 0; padding-top: 100px !important; }
    
    /* Prevent any page content from covering navbar */
    body > * { max-width: 100%; }
    .page-wrapper { max-width: 100%; position: relative; z-index: 1; }
</style>
{% endblock %}

{% block layout %}
    <nav class="navbar navbar-expand-lg" data-turbo="false" style="position: fixed !important; top: 0 !important; left: 0 !important; right: 0 !important; width: 100% !important; z-index: 999999 !important; pointer-events: auto !important; background: rgba(255,255,255,0.95) !important;">
        <div class="container" style="pointer-events: auto !important;">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <div class="bg-primary text-white rounded-3 p-2 me-3 d-inline-flex shadow-sm">
                    <i class="fa-solid fa-heart-pulse"></i>
                </div>
                <strong>Hospismart</strong>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    {# On affiche ce lien uniquement si l'utilisateur est un patient #}
                    {% if app.user and is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_medecin_recherche' ? 'active' : '' }}" href="{{ path('app_medecin_recherche') }}">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_mes_rendezvous' ? 'active' : '' }}" href="{{ path('app_mes_rendezvous') }}">Mes rendez-vous</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') in ['app_evenement_public', 'app_evenement_inscription'] ? 'active' : '' }}" href="{{ path('app_evenement_public') }}">Événements</a>
                    </li>
                    {# Lien pour les réclamations #}
                    {% if app.user and is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') in ['front_office_index', 'front_office_mes_reclamations', 'front_office_nouvelle_reclamation', 'front_office_detail_reclamation'] ? 'active' : '' }}" href="{{ path('front_office_index') }}">Réclamations</a>
                        </li>
                    {% endif %}
                    {# Ce lien s'affiche pour l'admin OU pour un utilisateur identifié comme médecin #}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MEDECIN') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_stock_public' ? 'active' : '' }}" href="{{ path('app_stock_public') }}">Stocks médicaments</a>
                        </li>
                    {% endif %}
                    {% if app.user %}

                    {% endif %}
                </ul>
            </div>

            <div class="d-flex align-items-center">
                {# Système de Notification Patient #}

                {% if app.user and app.user.type == 'PATIENT' %}
                <div class="dropdown me-3">
                    <a class="nav-link p-0 position-relative notification-bell" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-bell fs-5"></i>
                        
                        {% set unread_count = 0 %}
                        {# On accède directement à app.user.notifications #}
                        {% for notif in app.user.notifications %}
                            {% if not notif.isRead %}{% set unread_count = unread_count + 1 %}{% endif %}
                        {% endfor %}
                        
                        {% if unread_count > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem;">
                                {{ unread_count }}
                            </span>
                        {% endif %}
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end shadow mt-3" style="width: 300px;">
                        <li class="dropdown-header d-flex justify-content-between">
                            <span>Notifications</span>
                            {% if unread_count > 0 %}<span class="badge bg-primary">{{ unread_count }}</span>{% endif %}
                        </li>
                        
                        {# On utilise app.user.notifications directement ici aussi #}
                        {% if app.user.notifications|length > 0 %}
                            {% for notif in app.user.notifications|sort((a, b) => b.createdAt <=> a.createdAt)|slice(0, 5) %}
                                <li class="p-3 border-bottom {{ not notif.isRead ? 'bg-light' : '' }}">
                                    <small class="d-block {{ not notif.isRead ? 'fw-bold' : '' }}">{{ notif.content }}</small>
                                    <small class="text-muted" style="font-size: 0.7rem;">{{ notif.createdAt|date('d/m H:i') }}</small>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="p-4 text-center text-muted small">Aucune notification</li>
                        {% endif %}
                    </ul>
                </div>
                {% endif %}

                <div class="d-none d-lg-block">
                    {% if app.user %}
                        <div class="dropdown d-inline-block">
                            {# Le bouton avec le prénom #}
                            <a class="btn-logout dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                {{ app.user.prenom }}
                            </a>

                            {# --- ICI TU METS TON BLOC --- #}
                            <ul class="dropdown-menu dropdown-menu-end shadow mt-2">
                                
                                {# Puisque seuls les patients voient cette navbar, on affiche "Mon Compte" #}
                                <li>
                                    <a class="dropdown-item small" href="{{ path('app_patient_coordonnees') }}">
                                        <i class="fa-solid fa-user-circle me-2"></i>Mon Compte
                                    </a>
                                </li>
                                
                                <li><hr class="dropdown-divider"></li>

                                {# Lien de déconnexion #}
                                <li>
                                    <a class="dropdown-item small text-danger" href="{{ path('app_logout') }}">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i>Déconnexion
                                    </a>
                                </li>
                            </ul>
                            {# -------------------------- #}

                        </div>
                    {% else %}
                        {# BOUTONS POUR VISITEURS NON CONNECTÉS #}
        <div class="d-flex gap-2">
            <a href="{{ path('app_login') }}" class="btn-logout">
                Connexion
            </a>
            <a href="{{ path('app_register') }}" class="btn btn-primary px-4 shadow-sm" style="border-radius: 50px; font-weight: 600;">
                <i class="fa-solid fa-user-plus me-2"></i>Inscription
            </a>
        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        {# Flash Messages Unifiés #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'success') }} alert-dismissible fade show shadow-sm" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>
    <footer class="footer-oasis text-center">
        <div class="container">
            <p class="mb-1">Hospismart &copy; {{ 'now'|date('Y') }} - OASIS</p>
        </div>
    </footer>
{% endblock %}