<div class="notification-item {{ notification.lue ? '' : 'notification-unread' }} p-2 border-bottom">
    <div class="d-flex justify-content-between align-items-start">
        <div class="flex-grow-1">
            <strong>{{ notification.titre }}</strong>
            {% if not notification.lue %}
                <span class="badge bg-warning ms-2 float-end">Nouveau</span>
            {% endif %}
            <p class="mb-1 small">{{ notification.message }}</p>
            <small class="text-muted">
                {{ notification.dateCreation|date('d/m/Y H:i') }}
            </small>
        </div>
        <div class="ms-2">
            {% if not notification.lue %}
                <form method="post" action="{{ path('app_notification_mark_read', {id: notification.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('mark_read') }}">
                    <button type="submit" class="btn btn-xs btn-outline-success" title="Marquer comme lu">
                        <i class="fas fa-check"></i>
                    </button>
                </form>
            {% endif %}
            <form method="post" action="{{ path('app_notification_delete', {id: notification.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                <button type="submit" class="btn btn-xs btn-outline-danger" title="Supprimer">
                    <i class="fas fa-times"></i>
                </button>
            </form>
        </div>
    </div>
</div>
