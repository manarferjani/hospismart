{% extends 'front.html.twig' %}

{% block title %}Modifier ma réservation - {{ reservation.evenement.titre }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h2 class="h4 mb-2"><i class="fa-solid fa-pen text-primary"></i> Modifier ma réservation</h2>
                <p class="text-muted mb-4">{{ reservation.evenement.titre }} — {{ reservation.evenement.dateDebut ? reservation.evenement.dateDebut|date('d/m/Y H:i') : '' }} — {{ reservation.evenement.lieu }}</p>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_errors(form) }}
                    {{ form_row(form.telephone) }}
                    {{ form_row(form.role) }}
                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(form.confirme_presence) }}
                            {{ form_label(form.confirme_presence) }}
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-check"></i> Enregistrer
                        </button>
                        <a href="{{ path('app_mes_reservations_index') }}" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        <p class="text-center mt-3">
            <a href="{{ path('app_mes_reservations_index') }}" class="text-muted"><i class="fa-solid fa-arrow-left"></i> Retour à mes réservations</a>
        </p>
    </div>
</div>
{% endblock %}
