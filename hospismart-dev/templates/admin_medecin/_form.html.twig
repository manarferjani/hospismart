{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.prenom) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.telephone) }}
            {{ form_row(form.specialite) }}
            {{ form_row(form.service) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.plainPassword) }}
        </div>
    </div>
    <button class="btn btn-primary mt-3">
        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('app_admin_medecin_index') }}" class="btn btn-secondary mt-3">
        <i class="fas fa-times"></i> Annuler
    </a>
{{ form_end(form) }}
