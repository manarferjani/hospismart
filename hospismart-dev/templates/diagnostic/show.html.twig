{% extends 'back.html.twig' %}

{% block title %}Diagnostic #{{ diagnostic.id }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Diagnostic #{{ diagnostic.id }}</h6>
                    <div>
                        <a href="{{ path('app_diagnostic_edit', {id: diagnostic.id}) }}" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a href="{{ path('app_diagnostic_index') }}" class="btn btn-sm btn-secondary">
                            <i class="fas fa-list"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="form-label text-muted small">Probabilit√© IA</label>
                            <p class="h5">
                                <span class="badge bg-success">{{ diagnostic.probabiliteIa|number_format(2, ',', ' ') }}%</span>
                            </p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-muted small">Contenu du diagnostic</label>
                        <div class="p-3 bg-light rounded">
                            {{ diagnostic.contenu }}
                        </div>
                    </div>

                    <div class="mt-4">
                        {{ include('diagnostic/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
