{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    .navbar { background: transparent !important; padding: 20px 0; }
    .nav-link { color: #555 !important; font-weight: 500; margin: 0 10px; transition: 0.3s; }
    .nav-link:hover { color: var(--primary-color) !important; font-weight: 600; }
    .nav-link.active { color: var(--primary-color) !important; font-weight: 700; }
    
    .navbar-brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary) !important;
        display: flex;
        align-items: center;
    }

    .navbar-brand i {
        color: var(--primary-color);
        margin-right: 10px;
        font-size: 1.8rem;
    }

    .btn-logout { 
        background-color: white; 
        color: var(--primary-color); 
        border: 2px solid var(--primary-color); 
        border-radius: 50px; 
        padding: 8px 20px; 
        font-weight: 600; 
        text-decoration: none; 
        transition: 0.3s;
        cursor: pointer;
    }
    .btn-logout:hover { 
        background-color: var(--primary-color); 
        color: white; 
    }
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand" href="{{ path('front_office_index') }}">
            <i class="fa-solid fa-heart-pulse"></i>
            <strong>Hospismart</strong>
        </a>
        
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('front_office_index') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('front_office_nouvelle_reclamation') }}">Nouvelle Réclamation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('front_office_mes_reclamations') }}">Mes Réclamations</a>
                </li>
            </ul>
        </div>

        <div class="d-none d-lg-block">
            <a href="#" class="btn-logout"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a>
        </div>
    </div>
</nav>

<main class="container py-4">
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check"></i> {{ flash_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-exclamation"></i> {{ flash_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    {% block content %}{% endblock %}
</main>
{% endblock %}