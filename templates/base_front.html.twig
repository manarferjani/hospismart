{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - OASIS / Hospismart{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Intégration de Bootstrap et FontAwesome pour la compatibilité Stock-mahmoud #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/front.css') }}">
    <style>
        .navbar-custom { background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); }
        .front-main { min-height: 80vh; }
        .footer-oasis { border-top: 1px solid #dee2e6; padding: 2rem 0; margin-top: 3rem; color: #6c757d; font-size: 0.875rem; }
    </style>
{% endblock %}

{% block body %}
<div class="front-layout">
    {# Barre de Navigation Fusionnée #}
    <header class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm">
        <div class="container">
            <a href="{{ path('app_home') }}" class="navbar-brand d-flex align-items-center">
                <i class="fas fa-hospital-alt me-2"></i>
                <strong>Hospismart <span class="fw-light">OASIS</span></strong>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#frontNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <nav class="collapse navbar-collapse" id="frontNav">
                <div class="navbar-nav me-auto">
                    <a href="{{ path('app_home') }}" class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}">Accueil</a>
                    <a href="{{ path('app_stock_public') }}" class="nav-link {{ app.request.get('_route') == 'app_stock_public' ? 'active' : '' }}">Stocks médicaments</a>
                </div>
                
                <div class="navbar-nav ms-auto align-items-center">
                    {% if app.user %}
                        <a href="{{ path('app_patient_coordonnees') }}" class="nav-link {{ app.request.get('_route') == 'app_patient_coordonnees' ? 'active' : '' }}">
                            <i class="fas fa-user-circle me-1"></i> Mon Compte
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm ms-lg-2">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link">Se connecter</a>
                        <a href="{{ path('app_register') }}" class="btn btn-light btn-sm ms-lg-2 text-primary fw-bold">Créer un compte</a>
                    {% endif %}
                </div>
            </nav>
        </div>
    </header>

    {# Zone de Contenu #}
    <main class="container my-5 front-main">
        {# Messages Flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'notice' ? 'info' : label) }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}{% endblock %}
    </main>

    {# Pied de page fusionné #}
    <footer class="footer-oasis text-center">
        <div class="container">
            <p class="mb-1">Hospismart &copy; {{ 'now'|date('Y') }} - Outil d'Assistance et de Suivi Intelligent de Santé (OASIS)</p>
            <small>Système de gestion hospitalière intégré</small>
        </div>
    </footer>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}