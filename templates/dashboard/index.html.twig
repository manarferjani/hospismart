{% extends 'back.html.twig' %}

{% block title %}Dashboard - OASIS{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h1><i class="fas fa-chart-line me-2" style="color: var(--accent);"></i>Dashboard</h1>
        <p>Vue d'ensemble du stock de médicaments</p>
    </div>

    {# Stat Cards #}
    <div class="row mb-4 g-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                <h6>Total Médicaments</h6>
                <h2>{{ totalMedicaments }}</h2>
                <i class="fas fa-pills stat-icon"></i>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card" style="background: linear-gradient(135deg, #f093fb, #f5576c);">
                <h6>Stock Faible</h6>
                <h2>{{ stockFaible }}</h2>
                <i class="fas fa-triangle-exclamation stat-icon"></i>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
                <h6>Valeur du Stock</h6>
                <h2>{{ (valeurStockTotal / 1000)|round(1) }}k€</h2>
                <i class="fas fa-euro-sign stat-icon"></i>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
                <h6>Mouvements</h6>
                <h2>{{ totalMouvements }}</h2>
                <i class="fas fa-arrows-rotate stat-icon"></i>
            </div>
        </div>
    </div>

    {# Charts #}
    <div class="row mb-4 g-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-chart-bar me-2" style="color: var(--accent);"></i>Top 10 Médicaments</h3>
                </div>
                <div class="card-body">
                    <canvas id="chartMedicaments" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-chart-pie me-2" style="color: var(--accent);"></i>Entrées / Sorties</h3>
                </div>
                <div class="card-body text-center">
                    <canvas id="chartMouvements" width="200" height="200"></canvas>
                    <div class="mt-3 d-flex justify-content-center gap-4">
                        <div>
                            <span class="badge bg-success" style="font-size: 14px; padding: 8px 16px;">
                                <i class="fas fa-arrow-down me-1"></i>{{ entrees }} Entrées
                            </span>
                        </div>
                        <div>
                            <span class="badge bg-danger" style="font-size: 14px; padding: 8px 16px;">
                                <i class="fas fa-arrow-up me-1"></i>{{ sorties }} Sorties
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Recent Movements #}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-history me-2" style="color: var(--accent);"></i>Mouvements récents</h3>
            <a href="{{ path('app_mouvement_stock_index') }}" class="btn btn-outline-primary btn-sm">
                Voir tous <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Médicament</th>
                            <th>Type</th>
                            <th class="text-center">Quantité</th>
                            <th>Commentaire</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mouvement in recentMouvements %}
                        <tr>
                            <td><small class="text-muted">{{ mouvement.dateMouvement|date('d/m/Y H:i') }}</small></td>
                            <td><strong>{{ mouvement.medicament.nom }}</strong></td>
                            <td>
                                {% if mouvement.type == 'ENTREE' %}
                                    <span class="badge bg-success"><i class="fas fa-arrow-down me-1"></i>Entrée</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="fas fa-arrow-up me-1"></i>Sortie</span>
                                {% endif %}
                            </td>
                            <td class="text-center"><strong>{{ mouvement.quantite }}</strong></td>
                            <td><small>{{ mouvement.commentaire ? mouvement.commentaire|slice(0, 40) ~ (mouvement.commentaire|length > 40 ? '...' : '') : '—' }}</small></td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5">
                                <div class="empty-state" style="padding: 32px;">
                                    <i class="fa-solid fa-history d-block"></i>
                                    <p>Aucun mouvement récent</p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
<script>
// Bar Chart
const ctxMed = document.getElementById('chartMedicaments').getContext('2d');
new Chart(ctxMed, {
    type: 'bar',
    data: {
        labels: {{ chartData.labels|json_encode|raw }},
        datasets: [{
            label: 'Quantité',
            data: {{ chartData.quantities|json_encode|raw }},
            backgroundColor: [
                'rgba(102, 126, 234, 0.8)',
                'rgba(118, 75, 162, 0.8)',
                'rgba(240, 147, 251, 0.8)',
                'rgba(245, 87, 108, 0.8)',
                'rgba(79, 172, 254, 0.8)',
                'rgba(0, 242, 254, 0.8)',
                'rgba(67, 233, 123, 0.8)',
                'rgba(56, 249, 215, 0.8)',
                'rgba(233, 69, 96, 0.8)',
                'rgba(255, 107, 129, 0.8)'
            ],
            borderRadius: 8,
            borderSkipped: false,
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: { legend: { display: false } },
        scales: {
            y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
            x: { grid: { display: false } }
        }
    }
});

// Doughnut Chart
const ctxMvt = document.getElementById('chartMouvements').getContext('2d');
new Chart(ctxMvt, {
    type: 'doughnut',
    data: {
        labels: ['Entrées', 'Sorties'],
        datasets: [{
            data: [{{ entrees }}, {{ sorties }}],
            backgroundColor: ['#43e97b', '#f5576c'],
            borderColor: '#fff',
            borderWidth: 3,
            hoverOffset: 8,
        }]
    },
    options: {
        responsive: true,
        cutout: '65%',
        plugins: { legend: { display: false } }
    }
});
</script>
{% endblock %}
