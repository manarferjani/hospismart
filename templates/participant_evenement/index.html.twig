{% extends 'back.html.twig' %}

{% block title %}Liste des Participants{% endblock %}
{% block page_title %}Liste des Participants{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('app_evenement_index') }}">Accueil</a></li>
<li class="breadcrumb-item active">Participants</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Participants aux Événements</h3>
                <p class="text-muted mb-0"><small>Liste en lecture seule - Les participants s'inscrivent via le Front Office</small></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Événement</th>
                                <th>Participant</th>
                                <th>Rôle</th>
                                <th>Confirmation</th>
                                <th>Date confirmation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for participant_evenement in participant_evenements %}
                            <tr>
                                <td>{{ participant_evenement.id }}</td>
                                <td>
                                    <a href="{{ path('app_evenement_show', {'id': participant_evenement.evenement.id}) }}">
                                        {{ participant_evenement.evenement.titre }}
                                    </a>
                                </td>
                                <td>{{ participant_evenement.nomComplet }} <small class="text-muted">({{ participant_evenement.email }})</small></td>
                                <td>
                                    <span class="badge bg-secondary">{{ participant_evenement.role }}</span>
                                </td>
                                <td>
                                    {% if participant_evenement.confirmePresence %}
                                        <span class="badge bg-success">Confirmé</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    {% endif %}
                                </td>
                                <td>{{ participant_evenement.dateConfirmation ? participant_evenement.dateConfirmation|date('d/m/Y H:i') : '-' }}</td>
                                <td>
                                    <a href="{{ path('app_participant_evenement_show', {'id': participant_evenement.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_participant_evenement_delete', {'id': participant_evenement.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce participant ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant_evenement.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun participant trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
