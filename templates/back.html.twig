{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 270px;
            --sidebar-bg: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            --accent: #e94560;
            --accent-hover: #ff6b81;
            --bg-main: #f0f2f5;
            --card-bg: #ffffff;
            --text-primary: #1a1a2e;
            --text-secondary: #6c757d;
            --border-color: #e9ecef;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.06);
            --shadow-md: 0 4px 16px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 32px rgba(0,0,0,0.12);
            --radius: 12px;
            --radius-sm: 8px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; }

        body { background: var(--bg-main); margin: 0; overflow-x: hidden; }

        /* ===== SIDEBAR ===== */
        .admin-wrapper { display: flex; min-height: 100vh; }

        .sidebar {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            position: fixed;
            top: 0; left: 0; bottom: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            box-shadow: 4px 0 24px rgba(0,0,0,0.15);
        }

        .sidebar-brand {
            padding: 28px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }
        .sidebar-brand .brand-icon {
            width: 42px; height: 42px;
            background: var(--accent);
            border-radius: 12px;
            display: flex; align-items: center; justify-content: center;
            font-size: 20px; color: white;
            box-shadow: 0 4px 12px rgba(233,69,96,0.4);
        }
        .sidebar-brand .brand-text {
            font-size: 20px; font-weight: 700; color: #fff; letter-spacing: -0.5px;
        }
        .sidebar-brand .brand-sub {
            font-size: 11px; color: rgba(255,255,255,0.4); font-weight: 400;
            text-transform: uppercase; letter-spacing: 1.5px;
        }

        .sidebar-section {
            padding: 20px 16px 8px;
            font-size: 10px;
            font-weight: 600;
            color: rgba(255,255,255,0.3);
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .sidebar-menu { list-style: none; padding: 8px 12px; margin: 0; flex: 1; }
        .sidebar-menu li { margin-bottom: 4px; }
        .sidebar-menu a {
            display: flex; align-items: center; gap: 14px;
            padding: 12px 16px;
            color: rgba(255,255,255,0.65);
            text-decoration: none;
            font-size: 14px; font-weight: 500;
            border-radius: 10px;
            transition: var(--transition);
            position: relative;
        }
        .sidebar-menu a i { font-size: 18px; width: 22px; text-align: center; }
        .sidebar-menu a:hover {
            background: rgba(255,255,255,0.08);
            color: #fff;
            transform: translateX(4px);
        }
        .sidebar-menu a.active {
            background: linear-gradient(135deg, var(--accent), #ff6b81);
            color: #fff;
            box-shadow: 0 4px 16px rgba(233,69,96,0.35);
        }
        .sidebar-menu .badge-count {
            margin-left: auto;
            background: rgba(255,255,255,0.15);
            color: #fff;
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 20px;
            font-weight: 600;
        }
        .sidebar-menu a.active .badge-count {
            background: rgba(255,255,255,0.25);
        }

        .sidebar-footer {
            padding: 20px 16px;
            border-top: 1px solid rgba(255,255,255,0.08);
            text-align: center;
        }
        .sidebar-footer small {
            color: rgba(255,255,255,0.25);
            font-size: 11px;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            margin-left: var(--sidebar-width);
            flex: 1;
            padding: 32px 40px;
            min-height: 100vh;
        }

        /* ===== PAGE HEADER ===== */
        .page-header {
            margin-bottom: 28px;
        }
        .page-header h1 {
            font-size: 26px;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
            letter-spacing: -0.5px;
        }
        .page-header p {
            color: var(--text-secondary);
            margin: 4px 0 0;
            font-size: 14px;
        }

        /* ===== CARDS ===== */
        .card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: var(--radius);
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            overflow: hidden;
        }
        .card:hover {
            box-shadow: var(--shadow-md);
        }
        .card-header {
            background: #fff;
            border-bottom: 1px solid var(--border-color);
            padding: 18px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
        }
        .card-header .card-title {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }
        .card-body { padding: 24px; }

        /* ===== TABLES ===== */
        .table {
            font-size: 14px;
            margin-bottom: 0;
        }
        .table thead th {
            background: #f8f9fb;
            border-bottom: 2px solid var(--border-color);
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 14px 16px;
            white-space: nowrap;
        }
        .table tbody td {
            padding: 14px 16px;
            vertical-align: middle;
            border-color: var(--border-color);
        }
        .table-hover tbody tr:hover {
            background: rgba(233,69,96,0.03);
        }
        .table-warning { background-color: #fff3cd !important; }

        /* ===== BUTTONS ===== */
        .btn {
            font-weight: 500;
            font-size: 14px;
            border-radius: var(--radius-sm);
            padding: 8px 18px;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: none;
        }
        .btn-sm {
            font-size: 13px;
            padding: 6px 12px;
            border-radius: 8px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #0d6efd, #0a58ca);
            color: #fff;
            box-shadow: 0 2px 8px rgba(13,110,253,0.25);
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #0a58ca, #084298);
            box-shadow: 0 4px 12px rgba(13,110,253,0.35);
            transform: translateY(-1px);
            color: #fff;
        }
        .btn-success {
            background: linear-gradient(135deg, #198754, #157347);
            color: #fff;
            box-shadow: 0 2px 8px rgba(25,135,84,0.25);
        }
        .btn-success:hover {
            background: linear-gradient(135deg, #157347, #0f5132);
            box-shadow: 0 4px 12px rgba(25,135,84,0.35);
            transform: translateY(-1px);
            color: #fff;
        }
        .btn-danger {
            background: linear-gradient(135deg, #dc3545, #bb2d3b);
            color: #fff;
            box-shadow: 0 2px 8px rgba(220,53,69,0.25);
        }
        .btn-danger:hover {
            background: linear-gradient(135deg, #bb2d3b, #a52834);
            box-shadow: 0 4px 12px rgba(220,53,69,0.35);
            transform: translateY(-1px);
            color: #fff;
        }
        .btn-info {
            background: linear-gradient(135deg, #0dcaf0, #0aa2c0);
            color: #fff;
            box-shadow: 0 2px 8px rgba(13,202,240,0.25);
        }
        .btn-info:hover {
            background: linear-gradient(135deg, #0aa2c0, #087990);
            transform: translateY(-1px);
            color: #fff;
        }
        .btn-secondary {
            background: #6c757d;
            color: #fff;
        }
        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-1px);
            color: #fff;
        }
        .btn-outline-primary {
            background: transparent;
            color: #0d6efd;
            border: 2px solid #0d6efd;
        }
        .btn-outline-primary:hover {
            background: #0d6efd;
            color: #fff;
            transform: translateY(-1px);
        }
        .btn-light {
            background: #f8f9fa;
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }
        .btn-light:hover {
            background: #e9ecef;
            transform: translateY(-1px);
        }

        /* ===== BADGES ===== */
        .badge {
            font-weight: 600;
            font-size: 12px;
            padding: 5px 12px;
            border-radius: 20px;
            letter-spacing: 0.3px;
        }

        /* ===== BREADCRUMB ===== */
        .breadcrumb {
            background: transparent;
            padding: 0;
            margin-bottom: 0;
            font-size: 13px;
        }
        .breadcrumb-item a { color: var(--accent); text-decoration: none; }
        .breadcrumb-item a:hover { color: var(--accent-hover); }

        /* ===== FLASH MESSAGES ===== */
        .alert {
            border: none;
            border-radius: var(--radius-sm);
            padding: 14px 20px;
            font-size: 14px;
            font-weight: 500;
            box-shadow: var(--shadow-sm);
            animation: slideDown 0.4s ease;
        }
        .alert-success {
            background: linear-gradient(135deg, #d1e7dd, #badbcc);
            color: #0f5132;
        }
        .alert-danger {
            background: linear-gradient(135deg, #f8d7da, #f1aeb5);
            color: #842029;
        }
        .alert-warning {
            background: linear-gradient(135deg, #fff3cd, #ffe69c);
            color: #664d03;
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ===== FORMS ===== */
        .form-card-hospi .card-header {
            background: linear-gradient(135deg, #1a1a2e, #16213e);
            color: #fff;
            font-weight: 600;
            font-size: 16px;
            border: none;
        }
        .form-control, .form-select {
            border: 2px solid var(--border-color);
            border-radius: var(--radius-sm);
            padding: 10px 16px;
            font-size: 14px;
            transition: var(--transition);
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(233,69,96,0.15);
        }
        .form-label {
            font-weight: 600;
            font-size: 13px;
            color: var(--text-primary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 6px;
        }
        .form-actions-hospi {
            margin-top: 28px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            align-items: center;
        }
        .btn-hospi-primary {
            background: linear-gradient(135deg, var(--accent), var(--accent-hover));
            border: none;
            box-shadow: 0 4px 16px rgba(233,69,96,0.3);
            padding: 12px 28px;
            font-size: 15px;
        }
        .btn-hospi-primary:hover {
            background: linear-gradient(135deg, var(--accent-hover), var(--accent));
            box-shadow: 0 6px 20px rgba(233,69,96,0.4);
            transform: translateY(-2px);
        }

        /* ===== SEARCH BAR ===== */
        .search-bar {
            background: #f8f9fb;
            border-radius: var(--radius);
            padding: 16px 20px;
            margin-bottom: 20px;
            border: 1px solid var(--border-color);
        }
        .search-bar .form-control {
            background: #fff;
            border: 2px solid var(--border-color);
        }

        /* ===== TOOLTIP-LIKE ACTION BUTTONS ===== */
        .action-btns { display: flex; gap: 6px; }
        .action-btns .btn { padding: 6px 10px; font-size: 13px; }

        /* ===== STAT CARDS ===== */
        .stat-card {
            border-radius: var(--radius);
            padding: 22px 24px;
            color: #fff;
            position: relative;
            overflow: hidden;
            transition: var(--transition);
            border: none;
        }
        .stat-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-lg); }
        .stat-card .stat-icon {
            position: absolute;
            right: 16px; top: 50%;
            transform: translateY(-50%);
            font-size: 3rem;
            opacity: 0.15;
        }
        .stat-card h6 { font-size: 13px; font-weight: 500; opacity: 0.85; margin-bottom: 6px; }
        .stat-card h2 { font-size: 28px; font-weight: 700; margin: 0; }

        /* ===== MODAL ===== */
        .modal-content { border-radius: var(--radius); border: none; box-shadow: var(--shadow-lg); }
        .modal-header { border-radius: var(--radius) var(--radius) 0 0; }

        /* ===== SCROLLBAR ===== */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #ccc; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #999; }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 992px) {
            .sidebar { width: 220px; }
            .main-content { margin-left: 220px; padding: 20px; }
        }
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: var(--transition);
            }
            .sidebar.open { transform: translateX(0); }
            .main-content { margin-left: 0; padding: 16px; }
            .mobile-toggle {
                display: block !important;
                position: fixed; top: 16px; left: 16px; z-index: 1001;
                background: var(--accent); color: #fff;
                border: none; border-radius: 10px;
                width: 44px; height: 44px;
                font-size: 20px;
                box-shadow: 0 4px 12px rgba(233,69,96,0.3);
            }
        }

        /* Empty state */
        .empty-state {
            text-align: center;
            padding: 48px 24px;
            color: var(--text-secondary);
        }
        .empty-state i { font-size: 48px; opacity: 0.3; margin-bottom: 16px; }
        .empty-state p { font-size: 15px; }
    </style>
{% endblock %}

{% block layout %}
<button class="mobile-toggle" style="display:none;" onclick="document.querySelector('.sidebar').classList.toggle('open')">
    <i class="fas fa-bars"></i>
</button>

<div class="admin-wrapper">
    <aside class="sidebar">
        <div class="sidebar-brand">
            <div class="brand-icon"><i class="fa-solid fa-heart-pulse"></i></div>
            <div>
                <div class="brand-text">HospiSmart</div>
                <div class="brand-sub">Back Office</div>
            </div>
        </div>

        <div class="sidebar-section">Navigation</div>
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_dashboard') }}" class="{{ (app.request.attributes.get('_route') ?? '') == 'app_dashboard' ? 'active' : '' }}">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('app_medicament_index') }}" class="{{ (app.request.attributes.get('_route') ?? '') starts with 'app_medicament' ? 'active' : '' }}">
                    <i class="fa-solid fa-pills"></i> Médicaments
                </a>
            </li>
            <li>
                <a href="{{ path('app_categorie_index') }}" class="{{ (app.request.attributes.get('_route') ?? '') starts with 'app_categorie' ? 'active' : '' }}">
                    <i class="fa-solid fa-tags"></i> Catégories
                </a>
            </li>
            <li>
                <a href="{{ path('app_mouvement_stock_index') }}" class="{{ (app.request.attributes.get('_route') ?? '') starts with 'app_mouvement' ? 'active' : '' }}">
                    <i class="fa-solid fa-arrows-rotate"></i> Mouvements Stock
                </a>
            </li>
        </ul>

        <div class="sidebar-section">Outils</div>
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_medicament_export_pdf') }}" target="_blank">
                    <i class="fa-solid fa-file-pdf"></i> Export PDF
                </a>
            </li>
            <li>
                <a href="{{ path('api_stock_faible') }}" target="_blank">
                    <i class="fa-solid fa-code"></i> API Stock
                </a>
            </li>
        </ul>

        <div class="sidebar-section">Autres</div>
        <ul class="sidebar-menu">
            <li>
                <a href="{{ path('app_stock_public') }}" target="_blank">
                    <i class="fa-solid fa-globe"></i> Site Public
                </a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <small>&copy; {{ 'now'|date('Y') }} HospiSmart — OASIS</small>
        </div>
    </aside>

    <main class="main-content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {% if label == 'success' %}
                        <i class="fa-solid fa-circle-check me-2"></i>
                    {% elseif label == 'error' or label == 'danger' %}
                        <i class="fa-solid fa-circle-xmark me-2"></i>
                    {% else %}
                        <i class="fa-solid fa-circle-info me-2"></i>
                    {% endif %}
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>
</div>
{% endblock %}
