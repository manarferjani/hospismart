{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    .admin-wrapper { display: flex; min-height: 100vh; }

    .sidebar {
        width: 280px;
        background: var(--dark-sidebar);
        color: white;
        padding: 30px 20px;
        position: sticky;
        top: 0;
        height: 100vh;
    }

    .sidebar-brand { font-size: 22px; font-weight: 700; margin-bottom: 40px; display: flex; align-items: center; }
    .sidebar-brand i { color: var(--primary-color); margin-right: 15px; }

    .sidebar-menu { list-style: none; padding: 0; }
    .sidebar-menu li { margin-bottom: 10px; }
    .sidebar-menu a {
        color: rgba(255,255,255,0.7);
        text-decoration: none;
        padding: 12px 15px;
        display: flex;
        align-items: center;
        border-radius: 12px;
        transition: 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
        background: rgba(13, 110, 253, 0.15);
        color: white;
        font-weight: 600;
    }
    .sidebar-menu i { width: 25px; margin-right: 10px; font-size: 18px; }

    .main-content { flex: 1; padding: 40px; }

    .logout-box { margin-top: auto; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 20px; }

    /* ========== Form styling "Wow" ========== */
    .form-card-hospi {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(13, 110, 253, 0.08);
        overflow: hidden;
    }
    .form-card-hospi .card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #0a58ca 100%);
        color: white;
        font-weight: 600;
        padding: 1.25rem 1.5rem;
        border: none;
    }
    .form-card-hospi .card-body {
        padding: 2rem 1.5rem;
        background: #fff;
    }
    .form-group-hospi .form-control,
    .form-group-hospi .form-select {
        border-radius: 12px;
        border: 2px solid #e9ecef;
        transition: all 0.25s ease;
    }
    .form-group-hospi .form-control:focus,
    .form-group-hospi .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
        outline: none;
    }
    .form-group-hospi .form-control-lg,
    .form-group-hospi .form-select-lg {
        padding: 0.75rem 1rem;
    }
    .form-group-hospi textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }
    .btn-hospi-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, #0a58ca 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1.75rem;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-hospi-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.35);
    }
    .btn-hospi-outline {
        border-radius: 12px;
        padding: 0.75rem 1.75rem;
        font-weight: 600;
        border: 2px solid #dee2e6;
    }
    .btn-hospi-outline:hover { border-color: var(--primary-color); color: var(--primary-color); }
    .form-actions-hospi {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        padding-top: 1.5rem;
        margin-top: 1.5rem;
        border-top: 1px solid #eee;
    }
    .invalid-feedback { color: #dc3545; }

    /* ========== Erreurs de formulaire visibles ========== */
    .form-control.is-invalid,
    .form-select.is-invalid {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath fill='%23dc3545' d='M8 4a.75.75 0 11-1.5 0A.75.75 0 018 4zM4.75 6.75a.75.75 0 100-1.5.75.75 0 000 1.5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    .form-control.is-invalid:focus,
    .form-select.is-invalid:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }
    .invalid-feedback {
        display: block;
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }


    /* ========== Responsive Mobile ========== */
    @media (max-width: 768px) {
        .admin-wrapper { flex-direction: column; }
        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
            padding: 15px;
            max-height: 60px;
            overflow: hidden;
        }
        .sidebar:hover { max-height: 500px; }
        .sidebar-brand { margin-bottom: 10px; }
        .main-content { padding: 20px; }
        .card { margin-bottom: 15px; }
        .table-responsive { font-size: 12px; }
        .btn-sm { padding: 0.3rem 0.5rem; font-size: 11px; }
        .row > div { margin-bottom: 15px; }
    }
    @media (max-width: 480px) {
        .main-content { padding: 10px; }
        .sidebar-brand { font-size: 16px; margin-bottom: 5px; }
        .card-title { font-size: 14px; }
        .modal-body { padding: 10px; }
        .table { font-size: 11px; }
    }

</style>
{% endblock %}

{% block layout %}
<div class="admin-wrapper">
    <aside class="sidebar d-flex flex-column">
        <div class="sidebar-brand">
            <i class="fa-solid fa-heart-pulse"></i> Hospismart <small class="ms-2 text-muted" style="font-size: 12px;">Back Office</small>
        </div>

        <ul class="sidebar-menu">
            <li><a href="{{ path('app_dashboard') }}" class="{{ (app.request.attributes.get('_route') ?? '') == 'app_dashboard' ? 'active' : '' }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
            <li><a href="{{ path('app_medicament_index') }}" class="{{ (app.request.attributes.get('_route') ?? '') starts with 'app_medicament' ? 'active' : '' }}"><i class="fa-solid fa-pills"></i> Médicaments</a></li>
            <li><a href="{{ path('app_mouvement_stock_index') }}" class="{{ (app.request.attributes.get('_route') ?? '') starts with 'app_mouvement_stock' ? 'active' : '' }}"><i class="fa-solid fa-arrows-rotate"></i> Mouvements de stock</a></li>
            <li><a href="{{ path('api_stock_faible') }}" target="_blank"><i class="fa-solid fa-triangle-exclamation"></i> API Stock faible (JSON)</a></li>
            <li><a href="{{ path('app_stock_public') }}"><i class="fa-solid fa-globe"></i> Site public</a></li>
        </ul>

        <div class="logout-box">
            <ul class="sidebar-menu">
                <li><a href="#" class="text-danger"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a></li>
            </ul>
        </div>
    </aside>

    <main class="main-content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </main>
</div>
{% endblock %}
