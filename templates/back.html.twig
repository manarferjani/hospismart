{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #0d6efd;
        --dark-sidebar: #1e293b;
    }

    .admin-wrapper { display: flex; min-height: 100vh; }

    .sidebar {
        width: 280px;
        background: var(--dark-sidebar);
        color: white;
        padding: 30px 20px;
        position: sticky;
        top: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .sidebar-brand { font-size: 22px; font-weight: 700; margin-bottom: 30px; display: flex; align-items: center; }
    .sidebar-brand i { color: var(--primary-color); margin-right: 15px; }

    /* Profil Médecin dans Sidebar */
    .sidebar-profile {
        text-align: center;
        padding: 15px 10px 25px 10px;
        margin-bottom: 25px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        display: block; 
        text-decoration: none;
        transition: 0.3s;
        border-radius: 15px;
    }
    .sidebar-profile:hover { background: rgba(255, 255, 255, 0.05); }
    .sidebar-profile.active-profile { background: rgba(13, 110, 253, 0.1); border-bottom: 1px solid var(--primary-color); }

    .profile-img {
        width: 80px; height: 80px;
        border-radius: 50%;
        border: 3px solid rgba(255,255,255,0.1);
        margin-bottom: 10px;
        object-fit: cover;
    }
    .profile-name { font-size: 16px; font-weight: 600; display: block; color: #fff; }
    .profile-spec { font-size: 12px; color: rgba(255,255,255,0.5); text-transform: uppercase; display: block; }

    .sidebar-menu { list-style: none; padding: 0; }
    .sidebar-menu li { margin-bottom: 10px; }
    .sidebar-menu a {
        color: rgba(255,255,255,0.7);
        text-decoration: none;
        padding: 12px 15px;
        display: flex;
        align-items: center;
        border-radius: 12px;
        transition: 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
        background: rgba(13, 110, 253, 0.15);
        color: white;
        font-weight: 600;
    }
    .sidebar-menu i { width: 25px; margin-right: 10px; font-size: 18px; }

    .main-content { flex: 1; padding: 40px; position: relative; }
    .logout-box { margin-top: auto; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 20px; }

    /* Système de Notification */
    .notif-container { position: absolute; top: 40px; right: 40px; z-index: 1000; }
    .notification-bell { color: #555; cursor: pointer; position: relative; transition: 0.3s; }
    .notification-bell:hover { color: var(--primary-color); }
    .bell-badge {
        position: absolute; top: -5px; right: -5px;
        background-color: #dc3545; color: white;
        border-radius: 50%; padding: 2px 5px;
        font-size: 10px; font-weight: bold; line-height: 1;
    }
    .notif-dropdown {
        position: absolute; right: 0; top: 45px; width: 320px;
        background: white; border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        display: none; border: 1px solid #eee; overflow: hidden;
    }
    .notif-dropdown.active { display: block; animation: fadeIn 0.2s ease; }
    .notif-header { padding: 15px; background: #f8fafc; border-bottom: 1px solid #eee; font-weight: 700; }
    .notif-item { padding: 12px 15px; border-bottom: 1px solid #f8f9fa; display: flex; align-items: center; text-decoration: none; color: #333; font-size: 13px; }
    .notif-item:hover { background: #f1f5f9; }

    /* Form styling "Wow" */
    .form-card-hospi { border: none; border-radius: 20px; box-shadow: 0 10px 40px rgba(13, 110, 253, 0.08); overflow: hidden; }
    .form-card-hospi .card-header { background: linear-gradient(135deg, var(--primary-color) 0%, #0a58ca 100%); color: white; font-weight: 600; padding: 1.25rem 1.5rem; }
    .btn-hospi-primary { background: linear-gradient(135deg, var(--primary-color) 0%, #0a58ca 100%); border: none; border-radius: 12px; padding: 0.75rem 1.75rem; color: white; font-weight: 600; }

    @keyframes fadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }

    /* Responsive */
    @media (max-width: 768px) {
        .admin-wrapper { flex-direction: column; }
        .sidebar { width: 100%; height: auto; position: relative; padding: 15px; }
        .notif-container { top: 15px; right: 15px; }
    }
</style>
{% endblock %}

{% block layout %}
<div class="admin-wrapper">
    <aside class="sidebar">
        <div class="sidebar-brand">
            <i class="fa-solid fa-heart-pulse"></i> Hospismart 
            <small class="ms-2 text-muted" style="font-size: 12px;">
                {{ medecin is defined ? 'DOC' : 'BACK OFFICE' }}
            </small>
        </div>

        {# Affichage du profil si le contexte est "Médecin" #}
        {% if medecin is defined %}
            <a href="{{ path('app_medecin_profil') }}" class="sidebar-profile {{ app.request.get('_route') == 'app_medecin_profil' ? 'active-profile' : '' }}">
                {% if medecin.image %}
                    <img src="{{ asset('/images/medecins/' ~ medecin.image) }}" class="profile-img shadow-sm">
                {% else %}
                    <img src="https://ui-avatars.com/api/?name={{ medecin.user.nom|default('D') }}+{{ medecin.user.prenom|default('R') }}&background=0d6efd&color=fff" class="profile-img">
                {% endif %}
                <span class="profile-name">Dr. {{ medecin.user.nom|default('Nom') }}</span>
                <span class="profile-spec">{{ medecin.specialite|default('Médecin') }}</span>
            </a>
        {% endif %}

        <ul class="sidebar-menu">
            {# Menu Médecin #}
            {% if medecin is defined %}
                <li><a href="{{ path('app_medecin_dashboard') }}" class="{{ app.request.get('_route') == 'app_medecin_dashboard' ? 'active' : '' }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
                <li><a href="{{ path('app_medecin_demandes_rdv') }}" class="{{ app.request.get('_route') == 'app_medecin_demandes_rdv' ? 'active' : '' }}"><i class="fa-solid fa-calendar-check"></i> Mes Rendez-vous</a></li>
                <li><a href="{{ path('app_medecin_dispo_index') }}" class="{{ app.request.get('_route') == 'app_medecin_dispo_index' ? 'active' : '' }}"><i class="fa-solid fa-clock"></i> Disponibilités</a></li>
            {# Menu Stock / Admin #}
            {% else %}
                <li><a href="{{ path('app_dashboard') }}" class="{{ app.request.get('_route') == 'app_dashboard' ? 'active' : '' }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a></li>
                <li><a href="{{ path('app_medicament_index') }}" class="{{ app.request.get('_route') starts with 'app_medicament' ? 'active' : '' }}"><i class="fa-solid fa-pills"></i> Médicaments</a></li>
                <li><a href="{{ path('app_mouvement_stock_index') }}" class="{{ app.request.get('_route') starts with 'app_mouvement_stock' ? 'active' : '' }}"><i class="fa-solid fa-arrows-rotate"></i> Stocks</a></li>
            {% endif %}
        </ul>

        <div class="logout-box">
            <ul class="sidebar-menu">
                <li><a href="{{ path('app_logout') }}" class="text-danger"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a></li>
            </ul>
        </div>
    </aside>

    <main class="main-content">
        {# Barre de notifications (uniquement pour médecin) #}
        {% if medecin is defined %}
            <div class="notif-container">
                <div class="notification-bell" id="bellBtn">
                    <i class="fa-solid fa-bell fa-xl"></i>
                    {% if demandes_attente is defined and demandes_attente > 0 %}
                        <span class="bell-badge">{{ demandes_attente }}</span>
                    {% endif %}
                </div>
                <div class="notif-dropdown" id="notifBox">
                    <div class="notif-header">Demandes en attente</div>
                    <div class="notif-body">
                        {% if notifications_list is defined and notifications_list|length > 0 %}
                            {% for rdv in notifications_list %}
                                <a href="{{ path('app_medecin_demandes_rdv') }}" class="notif-item">
                                    <i class="fa-solid fa-calendar-day"></i>
                                    <div>
                                        <strong>{{ rdv.patient.user.nom|default('Patient') }}</strong><br>
                                        <small class="text-muted">Le {{ rdv.datetime|date('d/m à H:i') }}</small>
                                    </div>
                                </a>
                            {% endfor %}
                        {% else %}
                            <div class="p-3 text-center text-muted">Aucune demande</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}

        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const bell = document.getElementById('bellBtn');
        const box = document.getElementById('notifBox');
        if (bell && box) {
            bell.addEventListener('click', (e) => {
                e.stopPropagation();
                box.classList.toggle('active');
            });
            document.addEventListener('click', () => box.classList.remove('active'));
        }
    });
</script>
{% endblock %}