{% extends 'back.html.twig' %}

{% block title %}Mouvement #{{ mouvement_stock.id }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_medicament_index') }}">Médicaments</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_mouvement_stock_index') }}">Mouvements</a></li>
            <li class="breadcrumb-item active">Détail</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Mouvement #{{ mouvement_stock.id }}</h3>
            <div class="d-flex gap-2 align-items-center">
                <a href="{{ path('app_mouvement_stock_edit', {id: mouvement_stock.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                {{ include('mouvement_stock/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr><th>Id</th><td>{{ mouvement_stock.id }}</td></tr>
                    <tr><th>Type</th><td><span class="badge {{ mouvement_stock.type == 'ENTREE' ? 'bg-success' : 'bg-warning text-dark' }}">{{ mouvement_stock.type }}</span></td></tr>
                    <tr><th>Quantité</th><td>{{ mouvement_stock.quantite }}</td></tr>
                    <tr><th>Date</th><td>{{ mouvement_stock.dateMouvement ? mouvement_stock.dateMouvement|date('d/m/Y H:i') : '' }}</td></tr>
                    <tr><th>Commentaire</th><td>{{ mouvement_stock.commentaire|default('-') }}</td></tr>
                    <tr><th>Médicament</th><td>{% if mouvement_stock.medicament %}<a href="{{ path('app_medicament_show', {id: mouvement_stock.medicament.id}) }}">{{ mouvement_stock.medicament.nom }}</a>{% else %}-{% endif %}</td></tr>
                </tbody>
            </table>
            <a href="{{ path('app_mouvement_stock_index') }}" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>
{% endblock %}
