{% extends 'back.html.twig' %}

{% block title %}Mouvement #{{ mouvement_stock.id }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_mouvement_stock_index') }}">Mouvements</a></li>
            <li class="breadcrumb-item active">Mouvement #{{ mouvement_stock.id }}</li>
        </ol>
    </nav>

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <h1>
                <i class="fa-solid fa-arrows-rotate me-2" style="color: var(--accent);"></i>
                Mouvement #{{ mouvement_stock.id }}
                {% if mouvement_stock.type == 'ENTREE' %}
                    <span class="badge bg-success ms-2" style="font-size: 14px;">Entrée</span>
                {% else %}
                    <span class="badge bg-danger ms-2" style="font-size: 14px;">Sortie</span>
                {% endif %}
            </h1>
            <div class="d-flex gap-2">
                <a href="{{ path('app_mouvement_stock_edit', {id: mouvement_stock.id}) }}" class="btn btn-primary">
                    <i class="fa-solid fa-pen"></i> Modifier
                </a>
                {{ include('mouvement_stock/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa-solid fa-info-circle me-2"></i>Détails du mouvement</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <tbody>
                            <tr><th style="width: 200px; background: #f8f9fb;">Identifiant</th><td><span class="text-muted">#{{ mouvement_stock.id }}</span></td></tr>
                            <tr>
                                <th style="background: #f8f9fb;">Type</th>
                                <td>
                                    {% if mouvement_stock.type == 'ENTREE' %}
                                        <span class="badge bg-success"><i class="fas fa-arrow-down me-1"></i>Entrée de stock</span>
                                    {% else %}
                                        <span class="badge bg-danger"><i class="fas fa-arrow-up me-1"></i>Sortie de stock</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr><th style="background: #f8f9fb;">Quantité</th><td><strong style="font-size: 18px;">{{ mouvement_stock.quantite }}</strong> unités</td></tr>
                            <tr><th style="background: #f8f9fb;">Date</th><td>{{ mouvement_stock.dateMouvement ? mouvement_stock.dateMouvement|date('d/m/Y à H:i') : '-' }}</td></tr>
                            <tr><th style="background: #f8f9fb;">Commentaire</th><td>{{ mouvement_stock.commentaire|default('Aucun commentaire') }}</td></tr>
                            <tr>
                                <th style="background: #f8f9fb;">Médicament</th>
                                <td>
                                    {% if mouvement_stock.medicament %}
                                        <a href="{{ path('app_medicament_show', {id: mouvement_stock.medicament.id}) }}" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                            <i class="fa-solid fa-pills me-1"></i>{{ mouvement_stock.medicament.nom }}
                                        </a>
                                    {% else %}
                                        —
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa-solid fa-bolt me-2"></i>Actions</h3>
                </div>
                <div class="card-body d-grid gap-3">
                    <a href="{{ path('app_mouvement_stock_edit', {id: mouvement_stock.id}) }}" class="btn btn-primary">
                        <i class="fa-solid fa-pen"></i> Modifier
                    </a>
                    <a href="{{ path('app_mouvement_stock_index') }}" class="btn btn-light">
                        <i class="fa-solid fa-arrow-left"></i> Retour à la liste
                    </a>
                    {% if mouvement_stock.medicament %}
                        <a href="{{ path('app_medicament_show', {id: mouvement_stock.medicament.id}) }}" class="btn btn-outline-primary">
                            <i class="fa-solid fa-pills"></i> Voir le médicament
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
