{% extends 'back.html.twig' %}

{% block title %}Mouvements de stock{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1><i class="fa-solid fa-arrows-rotate me-2" style="color: var(--accent);"></i>Mouvements de stock</h1>
                <p>Historique des entrées et sorties de stock</p>
            </div>
            <a href="{{ path('app_mouvement_stock_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau mouvement
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Type</th>
                            <th class="text-center">Quantité</th>
                            <th>Date</th>
                            <th>Commentaire</th>
                            <th>Médicament</th>
                            <th style="width: 180px;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mouvement_stock in mouvement_stocks %}
                            <tr>
                                <td><span class="text-muted">#{{ mouvement_stock.id }}</span></td>
                                <td>
                                    {% if mouvement_stock.type == 'ENTREE' %}
                                        <span class="badge bg-success"><i class="fas fa-arrow-down me-1"></i>Entrée</span>
                                    {% else %}
                                        <span class="badge bg-danger"><i class="fas fa-arrow-up me-1"></i>Sortie</span>
                                    {% endif %}
                                </td>
                                <td class="text-center"><strong>{{ mouvement_stock.quantite }}</strong></td>
                                <td>{{ mouvement_stock.dateMouvement ? mouvement_stock.dateMouvement|date('d/m/Y H:i') : '-' }}</td>
                                <td>
                                    {% if mouvement_stock.commentaire %}
                                        <span title="{{ mouvement_stock.commentaire }}">{{ mouvement_stock.commentaire|slice(0, 40) }}{{ mouvement_stock.commentaire|length > 40 ? '...' : '' }}</span>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if mouvement_stock.medicament %}
                                        <a href="{{ path('app_medicament_show', {id: mouvement_stock.medicament.id}) }}" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                            <i class="fa-solid fa-pills me-1"></i>{{ mouvement_stock.medicament.nom }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="action-btns justify-content-center">
                                        <a href="{{ path('app_mouvement_stock_show', {id: mouvement_stock.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_mouvement_stock_edit', {id: mouvement_stock.id}) }}" class="btn btn-sm btn-secondary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('mouvement_stock/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    <div class="empty-state">
                                        <i class="fa-solid fa-arrows-rotate d-block"></i>
                                        <p class="mb-2"><strong>Aucun mouvement enregistré</strong></p>
                                        <a href="{{ path('app_mouvement_stock_new') }}" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-plus me-1"></i> Créer un mouvement
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
