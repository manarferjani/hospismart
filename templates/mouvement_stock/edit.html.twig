{% extends 'back.html.twig' %}

{% block title %}Modifier le mouvement #{{ mouvement_stock.id }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_medicament_index') }}">Médicaments</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_mouvement_stock_index') }}">Mouvements</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_mouvement_stock_show', {id: mouvement_stock.id}) }}">#{{ mouvement_stock.id }}</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>

    <div class="card form-card-hospi shadow-sm">
        <div class="card-header">
            <i class="fa-solid fa-pen-to-square me-2"></i> Modifier le mouvement
        </div>
        <div class="card-body">
            {{ include('mouvement_stock/_form.html.twig', { button_label: 'Enregistrer' }) }}
            <div class="mt-3 pt-3 border-top d-flex flex-wrap gap-2 align-items-center">
                <a href="{{ path('app_mouvement_stock_show', {id: mouvement_stock.id}) }}" class="btn btn-outline-primary btn-hospi-outline">Voir le détail</a>
                {{ include('mouvement_stock/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
