{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #0d6efd;
        --hover-color: #4178F5;
    }
    .navbar { background: transparent !important; padding: 20px 0; }
    
    /* Style des liens */
    .nav-link { 
        color: #555 !important; 
        font-weight: 500; 
        margin: 0 10px; 
        transition: all 0.3s ease;
        border-bottom: 2px solid transparent;
    }

    .nav-link:hover { 
        color: var(--hover-color) !important; 
        transform: translateY(-2px);
    }

    .nav-link.active { 
        color: var(--primary-color) !important; 
        font-weight: 700;
        border-bottom: 2px solid var(--primary-color);
    }

    .btn-logout { 
        background-color: white; color: var(--primary-color); 
        border: 2px solid var(--primary-color); border-radius: 50px; 
        padding: 8px 20px; font-weight: 600; text-decoration: none; transition: 0.3s;
    }
    .btn-logout:hover { background-color: var(--primary-color); color: white; }

    .notification-bell { color: #555; transition: color 0.3s ease; cursor: pointer; }
    .notification-bell:hover { color: var(--primary-color); }
    
    .dropdown-menu { border-radius: 15px; border: none; }
</style>
{% endblock %}

{% block layout %}
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <div class="bg-primary text-white rounded-3 p-2 me-3 d-inline-flex shadow-sm">
                    <i class="fa-solid fa-heart-pulse"></i>
                </div>
                <strong>Hospismart</strong>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_stock_public' ? 'active' : '' }}" href="{{ path('app_stock_public') }}">Médicaments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_mes_rendezvous' ? 'active' : '' }}" href="{{ path('app_mes_rendezvous') }}">Mes RDV</a>
                    </li>
                    
                    {# Menu Dynamique Médecin #}
                    {% if app.user and app.user.medecin %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_medecin' ? 'active' : '' }}" href="{{ path('app_medecin_dashboard') }}">Espace Docteur</a>
                    </li>
                    {% endif %}

                    {# Menu Dynamique Pharmacie/Stock #}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_medicament_index') }}"><i class="fa-solid fa-box-archive me-1"></i> Gestion Stocks</a>
                    </li>
                    {% endif %}
                </ul>
            </div>

            <div class="d-flex align-items-center">
                {# CLOCHE DE NOTIFICATION (HEAD version) #}
                {% if app.user and app.user.patient %}
                <div class="dropdown me-4">
                    <a class="nav-link p-0 position-relative notification-bell" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-bell fs-5"></i>
                        {% set unread_count = 0 %}
                        {% for notif in app.user.patient.notifications %}
                            {% if not notif.isRead %}{% set unread_count = unread_count + 1 %}{% endif %}
                        {% endfor %}
                        
                        {% if unread_count > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem;">
                                {{ unread_count }}
                            </span>
                        {% endif %}
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end shadow mt-3" style="width: 300px;">
                        <li class="dropdown-header d-flex justify-content-between">
                            <span>Notifications</span>
                            {% if unread_count > 0 %}<span class="badge bg-primary">{{ unread_count }}</span>{% endif %}
                        </li>
                        {% if app.user.patient.notifications|length > 0 %}
                            {% for notif in app.user.patient.notifications|sort((a, b) => b.createdAt <=> a.createdAt)|slice(0, 5) %}
                                <li class="p-3 border-bottom {{ not notif.isRead ? 'bg-light' : '' }}">
                                    <small class="d-block {{ not notif.isRead ? 'fw-bold' : '' }}">{{ notif.message }}</small>
                                    <small class="text-muted" style="font-size: 0.7rem;">{{ notif.createdAt|date('d/m H:i') }}</small>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="p-4 text-center text-muted small">Aucune notification</li>
                        {% endif %}
                    </ul>
                </div>
                {% endif %}

                <div class="d-none d-lg-block">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn-logout">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn-logout">Connexion</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        {% block body %}{% endblock %}
    </main>
{% endblock %}