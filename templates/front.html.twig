{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #0d6efd;
        --hover-color: #4178F5;
    }
    .navbar { background: transparent !important; padding: 20px 0; }
    
    /* Style des liens avec animation de soulignement */
    .nav-link { 
        color: #555 !important; 
        font-weight: 500; 
        margin: 0 10px; 
        transition: all 0.3s ease;
        border-bottom: 2px solid transparent;
    }

    .nav-link:hover { 
        color: var(--hover-color) !important; 
        transform: translateY(-2px);
    }

    .nav-link.active { 
        color: var(--primary-color) !important; 
        font-weight: 700;
        border-bottom: 2px solid var(--primary-color);
    }

    .btn-logout { 
        background-color: white; color: var(--primary-color); 
        border: 2px solid var(--primary-color); border-radius: 50px; 
        padding: 8px 20px; font-weight: 600; text-decoration: none; transition: 0.3s;
    }
    .btn-logout:hover { background-color: var(--primary-color); color: white; }
    
    .dropdown-menu { border-radius: 15px; border: none; }
    .navbar-custom { background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); }
    .front-main { min-height: 80vh; }
    .footer-oasis { border-top: 1px solid #dee2e6; padding: 2rem 0; margin-top: 3rem; color: #6c757d; font-size: 0.875rem; }
</style>
{% endblock %}

{% block layout %}
    <header class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_stock_public') }}">
                <div class="bg-primary text-white rounded-3 p-2 me-3 d-inline-flex shadow-sm">
                    <i class="fa-solid fa-heart-pulse"></i>
                </div>
                <strong>Hospismart <span class="fw-light">OASIS</span></strong>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    {# <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}" href="{{ path('app_home') }}">Accueil</a>
                    </li> #}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_stock_public' ? 'active' : '' }}" href="{{ path('app_stock_public') }}">Médicaments</a>
                    </li>
                </ul>
            </div>

            <div class="d-flex align-items-center">
                <div class="d-none d-lg-block">
                     <a href="{{ path('app_dashboard') }}" class="btn-logout">Espace Pro (Admin)</a>
                </div>
            </div>
        </div>
    </header>

    <main class="container my-5 front-main">
        {# Flash Messages Unifiés #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'success') }} alert-dismissible fade show shadow-sm" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="footer-oasis text-center">
        <div class="container">
            <p class="mb-1">Hospismart &copy; {{ 'now'|date('Y') }} - Outil d'Assistance et de Suivi Intelligent de Santé (OASIS)</p>
            <small>Système de gestion hospitalière intégré</small>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
