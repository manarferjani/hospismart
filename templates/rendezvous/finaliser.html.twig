{% extends 'base.html.twig' %}

{% block title %}Finaliser le rendez-vous{% endblock %}

{% block layout %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-4" style="border-radius: 24px;">
                <h2 class="mb-4" style="color: #1a1a2e; font-weight: 700;">Finaliser votre rendez-vous</h2>
                
                {# Rappel des infos du rendez-vous #}
                <div class="alert alert-info border-0 shadow-sm mb-4" style="background: #f0f7ff; border-radius: 15px;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-check me-3" style="font-size: 1.5rem; color: #4178F5;"></i>
                        <div>
                            <p class="mb-0"><strong>Médecin :</strong> Dr. {{ dispo.medecin.user.nom }}</p>
                            <p class="mb-0"><strong>Date :</strong> {{ dispo.dateDebut|date('d/m/Y à H:i') }}</p>
                        </div>
                    </div>
                </div>

                {# Affichage du formulaire #}
                {{ form_start(form) }}
                    <div class="mb-3">
                        {# Cela va afficher le label et le champ Textarea "motif" #}
                        {{ form_row(form.motif) }}
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg" style="border-radius: 12px; background: #4178F5; border: none;">
                            Confirmer le rendez-vous
                        </button>
                        <a href="{{ path('app_rendezvous_dispo', {'id': dispo.medecin.id}) }}" class="btn btn-link text-muted">
                            Annuler et revenir au calendrier
                        </a>
                    </div>
                {{ form_end(form) }}
                
            </div>
        </div>
    </div>
</div>
{% endblock %}