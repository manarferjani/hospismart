{% extends 'base.html.twig' %}

{% block layout %}
<div class="container mt-5" style="position: relative; z-index: 10;">
    
    {# Bouton Retour #}
    <div class="mb-4">
        <a href="javascript:history.back()" class="text-decoration-none" style="color: #4178F5; font-weight: 600;">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    {# La grande carte principale #}
    <div class="card shadow-sm border-0 p-4" style="border-radius: 24px;">
        
        {# --- SECTION HEADER (INCHANGÉE) --- #}
        <div class="d-flex align-items-center mb-4">
            <div class="me-4 position-relative">
                {% if medecin.image %}
                    <img src="{{ asset('images/medecins/' ~ medecin.image) }}" 
                         style="width: 140px; height: 140px; border-radius: 50%; object-fit: cover; border: 5px solid white; box-shadow: 0 8px 20px rgba(0,0,0,0.1);">
                {% else %}
                    <img src="https://ui-avatars.com/api/?name={{ medecin.user.nom|url_encode }}+{{ medecin.user.prenom|url_encode }}&background=4178F5&color=fff&size=200" 
                         style="width: 140px; height: 140px; border-radius: 50%; border: 5px solid white; box-shadow: 0 8px 20px rgba(0,0,0,0.1);">
                {% endif %}
                <span class="position-absolute bottom-0 end-0 bg-success border border-2 border-white rounded-circle" style="width: 25px; height: 25px;"></span>
            </div>
            
            <div>
                <span class="badge mb-2" style="background: rgba(65, 120, 245, 0.1); color: #4178F5; border-radius: 8px; padding: 6px 12px;">Profil Vérifié</span>
                <h1 style="color: #1a1a2e; font-weight: 800; margin-bottom: 5px; font-size: 2.5rem;">Dr. {{ medecin.user.nom|upper }} {{ medecin.user.prenom }}</h1>
                <p class="text-muted" style="font-size: 1.3rem; margin: 0;">
                    <i class="fas fa-certificate me-2" style="color: #4178F5;"></i>{{ medecin.specialite }}
                </p>
                <p class="mt-1 text-muted" style="font-size: 1rem;">
                    <i class="fas fa-map-marker-alt me-2"></i>Hôpital Hospismart, Monastir
                </p>
            </div>
        </div>
        
        <hr class="my-4" style="opacity: 0.1;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 style="color: #1a1a2e; font-size: 1.5rem; font-weight: 700; margin: 0;">
                <i class="far fa-calendar-alt me-2" style="color: #4178F5;"></i>Disponibilités
            </h3>
            <span class="text-muted">{{ disponibilites|length }} créneaux libres</span>
        </div>

        {# --- GRILLE DES CRÉNEAUX (AJUSTÉE) --- #}
        <div class="row g-4"> 
            {% for dispo in disponibilites %}
                {# col-md-3 permet d'avoir 4 cartes par ligne, les rendant "un peu plus grandes" #}
                <div class="col-sm-6 col-md-3 mb-2">
                    <div class="card h-100 border-0 shadow-sm p-3 text-center slot-card">
                        
                        <div class="slot-day" style="font-size: 0.85rem;">
                            {{ dispo.getDateDebut()|date('l')|replace({
                                'Monday': 'Lundi', 'Tuesday': 'Mardi', 'Wednesday': 'Mercredi', 
                                'Thursday': 'Jeudi', 'Friday': 'Vendredi', 'Saturday': 'Samedi', 'Sunday': 'Dimanche'
                            }) }}
                        </div>
                        <div class="slot-date" style="font-size: 0.9rem; margin-bottom: 8px;">{{ dispo.getDateDebut()|date('d M Y') }}</div>

                        <div class="slot-time" style="font-size: 1.25rem; padding: 8px; margin: 12px 0;">
                            {{ dispo.getDateDebut()|date('H:i') }}
                        </div>

                        <a href="{{ path('app_rendezvous_reserver', {'id': dispo.id}) }}" 
                           class="btn btn-reserve w-100" style="padding: 10px; font-weight: 700;">
                            Réserver
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="empty-calendar">
                        <i class="far fa-calendar-times mb-3" style="font-size: 3rem; color: #cbd5e1;"></i>
                        <p class="text-muted">Aucun créneau disponible pour le moment.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    .slot-card {
        border-radius: 20px; 
        transition: all 0.3s ease; 
        border: 1px solid #f1f5f9 !important;
    }
    .slot-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(65, 120, 245, 0.15) !important;
        border-color: #4178F5 !important;
    }
    .slot-day {
        font-weight: 700; 
        color: #4178F5; 
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .slot-date {
        color: #64748b;
    }
    .slot-time {
        color: #1a1a2e; 
        font-weight: 800; 
        background: #f8fafc;
        border-radius: 12px;
    }
    .btn-reserve {
        border-radius: 12px; 
        background: #4178F5; 
        border: none; 
        color: white;
        transition: 0.3s;
    }
    .btn-reserve:hover {
        background: #1a1a2e;
        color: white;
    }
</style>
{% endblock %}