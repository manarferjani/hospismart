{% extends 'base_front.html.twig' %}

{% block title %}Hospismart - Accueil{% endblock %}

{% block content %}
<div class="front-hero">
    <h1>Bienvenue sur Hospismart</h1>
    <p>Gérez vos réclamations et suivez vos rendez-vous en toute simplicité.</p>
    {% if app.user %}
        <div class="front-hero-buttons">
            {% if is_granted('ROLE_PATIENT') or (is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_MEDECIN')) %}
                <a href="{{ path('app_patient_coordonnees') }}" class="btn-primary">Mon Compte</a>
            {% endif %}
            <a href="{{ path('app_logout') }}" class="btn-secondary">Déconnexion</a>
        </div>
    {% else %}
        <div class="front-hero-buttons">
            <a href="{{ path('app_register') }}" class="btn-primary">Commencer</a>
            <a href="{{ path('app_login') }}" class="btn-secondary">Se connecter</a>
        </div>
    {% endif %}
</div>
{% endblock %}
