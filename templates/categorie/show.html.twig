{% extends 'back.html.twig' %}

{% block title %}{{ categorie.nom }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_categorie_index') }}">Catégories</a></li>
            <li class="breadcrumb-item active">{{ categorie.nom }}</li>
        </ol>
    </nav>

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <h1><i class="fa-solid fa-tag me-2" style="color: var(--accent);"></i>{{ categorie.nom }}</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('app_categorie_edit', {id: categorie.id}) }}" class="btn btn-primary">
                    <i class="fa-solid fa-pen"></i> Modifier
                </a>
                <form method="post" action="{{ path('app_categorie_delete', {id: categorie.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer la catégorie « {{ categorie.nom }} » ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Supprimer</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa-solid fa-info-circle me-2"></i>Informations</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <tbody>
                            <tr><th style="width: 150px; background: #f8f9fb;">Id</th><td>#{{ categorie.id }}</td></tr>
                            <tr><th style="background: #f8f9fb;">Nom</th><td><strong>{{ categorie.nom }}</strong></td></tr>
                            <tr><th style="background: #f8f9fb;">Description</th><td>{{ categorie.description|default('—') }}</td></tr>
                            <tr><th style="background: #f8f9fb;">Médicaments</th><td><span class="badge bg-info text-white">{{ categorie.medicaments|length }}</span></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa-solid fa-pills me-2"></i>Médicaments dans cette catégorie</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-end">Prix</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for medicament in categorie.medicaments %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_medicament_show', {id: medicament.id}) }}" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                                {{ medicament.nom }}
                                            </a>
                                        </td>
                                        <td class="text-center"><strong>{{ medicament.quantite }}</strong></td>
                                        <td class="text-end">{{ medicament.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                        <td>
                                            {% if medicament.quantite <= medicament.seuilAlerte %}
                                                <span class="badge bg-warning text-dark"><i class="fas fa-exclamation-triangle me-1"></i>Faible</span>
                                            {% else %}
                                                <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>OK</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="fa-solid fa-pills d-block mb-2" style="font-size: 32px; opacity: 0.3;"></i>
                                            Aucun médicament dans cette catégorie
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_categorie_index') }}" class="btn btn-light"><i class="fa-solid fa-arrow-left me-1"></i> Retour aux catégories</a>
    </div>
{% endblock %}
