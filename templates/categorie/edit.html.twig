{% extends 'back.html.twig' %}

{% block title %}Modifier {{ categorie.nom }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_categorie_index') }}">Catégories</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_categorie_show', {id: categorie.id}) }}">{{ categorie.nom }}</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>

    <div class="card form-card-hospi shadow-sm">
        <div class="card-header">
            <i class="fa-solid fa-pen-to-square me-2"></i> Modifier la catégorie
        </div>
        <div class="card-body">
            {{ form_start(form, { attr: { class: 'form-hospi', novalidate: 'novalidate' } }) }}
            {{ form_widget(form._token) }}

            {% if form.vars.errors|length > 0 %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="fa-solid fa-circle-exclamation me-2"></i>Erreurs :</strong>
                    <ul class="mb-0 mt-2">
                        {% for error in form.vars.errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endif %}

            <div class="row g-4">
                <div class="col-12">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.medicaments) }}
                </div>
            </div>
            <div class="form-actions-hospi">
                <button type="submit" class="btn btn-primary btn-hospi-primary">
                    <i class="fa-solid fa-check me-2"></i> Mettre à jour
                </button>
                <a href="{{ path('app_categorie_show', {id: categorie.id}) }}" class="btn btn-light btn-hospi-outline">
                    Voir la fiche
                </a>
                <a href="{{ path('app_categorie_index') }}" class="btn btn-light btn-hospi-outline">
                    <i class="fa-solid fa-arrow-left me-2"></i> Retour
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
