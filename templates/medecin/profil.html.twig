{% extends 'back.html.twig' %}

{% block title %}
    Mon Profil - Dr. {{ app.user ? app.user.nom : 'Médecin' }}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="fw-bold mb-4" style="color: #1a1a2e;">Mon Profil Professionnel</h2>

    {% if app.user %}
        <div class="row">
            {# Colonne de gauche : Carte de visite #}
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 text-center p-4 mb-4" style="border-radius: 20px;">
                    <div class="mb-3">
                        {# Utilisation de l'opérateur null-safe (? :) pour plus de sécurité #}
                        <img src="https://ui-avatars.com/api/?name={{ app.user.nom|url_encode }}+{{ app.user.prenom|url_encode }}&size=128&background=0D6EFD&color=fff" 
                             class="rounded-circle shadow-sm" alt="Avatar">
                    </div>
                    <h4 class="fw-bold">Dr. {{ app.user.prenom }} {{ app.user.nom }}</h4>
                    <p class="text-muted small">Médecin inscrit sur Hospismart</p>
                    <hr>
                    <div class="text-start small">
                        <p class="mb-2"><i class="fa-solid fa-envelope me-2 text-primary"></i> {{ app.user.email }}</p>
                        {# Accès sécurisé à la spécialité du médecin #}
                        <p class="mb-0"><i class="fa-solid fa-id-card me-2 text-primary"></i> 
                            Spécialité : {{ app.user ? app.user.specialite : 'Généraliste' }}
                        </p>
                    </div>
                </div>
            </div>

            {# Colonne de droite : Formulaire #}
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 p-4" style="border-radius: 20px;">
                    <h5 class="fw-bold mb-4">Informations personnelles</h5>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Nom</label>
                                <input type="text" class="form-control rounded-3" value="{{ app.user.nom }}" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Prénom</label>
                                <input type="text" class="form-control rounded-3" value="{{ app.user.prenom }}" readonly>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="button" class="btn btn-secondary px-4 shadow-sm" style="border-radius: 10px;" disabled>
                                    <i class="fa-solid fa-lock me-2"></i>Mise à jour (Désactivé)
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% else %}
        {# Message affiché si personne n'est connecté #}
        <div class="alert alert-danger shadow-sm border-0" style="border-radius: 12px;">
            <i class="fa-solid fa-circle-exclamation me-2"></i>
            <strong>Accès refusé :</strong> Vous devez être connecté pour voir cette page. 
            {#<a href="{{ path('app_login') }}" class="alert-link">Se connecter</a>#}
            <a href="#" class="alert-link">Se connecter</a>
        </div>
    {% endif %}
</div>
{% endblock %}