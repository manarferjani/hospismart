{% extends 'front.html.twig' %}

{% block body %}
<div class="container mt-5">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} border-0 shadow-sm mb-4" style="border-radius: 15px;">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0" style="color: #1a1a2e; font-weight: 700;">
            <i class="fas fa-bell me-2" style="color: #4178F5;"></i>
            Demandes de rendez-vous
        </h2>
        <a href="{{ path('app_medecin_dispo_index') }}" class="btn btn-outline-primary" style="border-radius: 12px;">
            <i class="fas fa-calendar-alt me-1"></i> Mes créneaux
        </a>
    </div>

    {% if demandes|length > 0 %}
        <div class="card shadow-sm border-0 p-4" style="border-radius: 20px;">
            <p class="text-muted mb-4">
                <strong>{{ demandes|length }}</strong> demande(s) en attente de votre réponse.
            </p>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Date / Heure</th>
                            <th>Patient</th>
                            <th>Motif</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rdv in demandes %}
                            <tr>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        {{ rdv.datetime|date('d/m/Y') }} à {{ rdv.datetime|date('H:i') }}
                                    </span>
                                </td>
                                <td>
                                    {% if rdv.patient and rdv.patient.user %}
                                        {{ rdv.patient.user.nom }} {{ rdv.patient.user.prenom }}
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>{{ rdv.motif|u.truncate(50) }}</td>
                                <td class="text-end">
                                    <form method="post" action="{{ path('app_medecin_rdv_accepter', { id: rdv.id }) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('accepter' ~ rdv.id) }}">
                                        <button type="submit" class="btn btn-success btn-sm" style="border-radius: 10px;">
                                            <i class="fas fa-check me-1"></i> Accepter
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_medecin_rdv_refuser', { id: rdv.id }) }}" class="d-inline ms-1">
                                        <input type="hidden" name="_token" value="{{ csrf_token('refuser' ~ rdv.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" style="border-radius: 10px;">
                                            <i class="fas fa-times me-1"></i> Refuser
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card shadow-sm border-0 p-5 text-center" style="border-radius: 20px;">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Aucune demande en attente</h5>
            <p class="text-muted mb-0">Les demandes de rendez-vous apparaîtront ici lorsque des patients réserveront un de vos créneaux.</p>
            <a href="{{ path('app_medecin_dispo_index') }}" class="btn btn-primary mt-3" style="border-radius: 12px; background: #4178F5;">
                Gérer mes créneaux
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
