{% extends 'front.html.twig' %}

{% block title %}Consultation des stocks - Hospismart{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                <div>
                    <h2 class="mb-1" id="stock" style="font-weight: 700;">
                        <i class="fa-solid fa-pills me-2" style="color: #e94560;"></i>Stocks de médicaments
                    </h2>
                    <p class="text-muted mb-0">Liste publique des médicaments et leurs disponibilités</p>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th class="text-center">Quantité</th>
                            <th class="text-center">Seuil d'alerte</th>
                            <th class="text-end">Prix unitaire</th>
                            <th>Péremption</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for medicament in medicaments %}
                            <tr class="{{ medicament.quantite <= medicament.seuilAlerte ? 'table-stock-low' : '' }}">
                                <td><strong>{{ medicament.nom }}</strong></td>
                                <td class="text-center">
                                    <strong style="font-size: 16px;">{{ medicament.quantite }}</strong>
                                </td>
                                <td class="text-center text-muted">{{ medicament.seuilAlerte }}</td>
                                <td class="text-end">{{ medicament.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                <td>{{ medicament.datePeremption ? medicament.datePeremption|date('d/m/Y') : '-' }}</td>
                                <td>
                                    {% if medicament.quantite <= medicament.seuilAlerte %}
                                        <span class="badge bg-warning text-dark"><i class="fas fa-exclamation-triangle me-1"></i>Stock faible</span>
                                    {% elseif medicament.quantite > medicament.seuilAlerte * 3 %}
                                        <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Disponible</span>
                                    {% else %}
                                        <span class="badge bg-info text-white"><i class="fas fa-info-circle me-1"></i>Normal</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="fa-solid fa-pills d-block mb-2" style="font-size: 40px; opacity: 0.3;"></i>
                                    <strong>Aucun médicament enregistré</strong>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
