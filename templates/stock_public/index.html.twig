{% extends 'front.html.twig' %}

{% block title %}Consultation des stocks - Hospismart{% endblock %}

{% block body %}
    <h1 class="mb-4" id="stock"><i class="fa-solid fa-pills me-2"></i>Consultation des stocks de médicaments</h1>
    <p class="lead text-muted">Liste des médicaments disponibles (consultation publique).</p>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th class="text-end">Quantité</th>
                    <th class="text-end">Seuil d'alerte</th>
                    <th class="text-end">Prix unitaire</th>
                    <th>Date de péremption</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for medicament in medicaments %}
                    <tr class="{{ medicament.quantite <= medicament.seuilAlerte ? 'table-stock-low' : '' }}">
                        <td>{{ medicament.nom }}</td>
                        <td class="text-end">{{ medicament.quantite }}</td>
                        <td class="text-end">{{ medicament.seuilAlerte }}</td>
                        <td class="text-end">{{ medicament.prixUnitaire|number_format(2, ',', ' ') }} €</td>
                        <td>{{ medicament.datePeremption ? medicament.datePeremption|date('d/m/Y') : '-' }}</td>
                        <td>
                            {% if medicament.quantite <= medicament.seuilAlerte %}
                                <span class="badge bg-warning text-dark"><i class="fas fa-exclamation-triangle"></i> Stock faible</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Aucun médicament enregistré.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
