{% extends 'base.html.twig' %}

{% block title %}Nouveau Matériel - Hospismart{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Glass Card pour le formulaire #}
            <div class="glass-card shadow-lg p-4 p-md-5 border-0 position-relative overflow-hidden">
                
                {# Décoration de fond subtile #}
                <div class="position-absolute top-0 end-0 p-3 opacity-10">
                    <i class="fa-solid fa-microscope fa-6x text-primary"></i>
                </div>

                <div class="mb-4">
                    <a href="{{ path('app_equipement_index') }}" class="btn btn-sm btn-light rounded-pill px-3 mb-3">
                        <i class="fa-solid fa-arrow-left me-1"></i> Retour à l'inventaire
                    </a>
                    <h2 class="fw-bold text-dark mb-1">Ajouter un matériel</h2>
                    <p class="text-muted">Remplissez les informations pour ajouter un nouveau scanner, IRM ou autre dispositif.</p>
                </div>

                <hr class="mb-4 opacity-10">

                {# On injecte le formulaire #}
                <div class="equipement-form">
                    {# On passe explicitement le texte 'Ajouter' au bouton #}
{{ include('equipement/_form.html.twig', {'button_label': 'Ajouter'}) }}
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Style pour personnaliser les champs à l'intérieur du _form.html.twig */
    .equipement-form form label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #495057;
    }
    .equipement-form input, 
    .equipement-form select, 
    .equipement-form textarea {
        border-radius: 12px !important;
        padding: 0.75rem 1rem;
        border: 1px solid #dee2e6;
        margin-bottom: 1rem;
    }
    .equipement-form input:focus, 
    .equipement-form select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
    .equipement-form button.btn {
        width: 100%;
        padding: 0.8rem;
        font-weight: bold;
        border-radius: 50px;
        margin-top: 1rem;
        background: #0d6efd;
        border: none;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
    }
</style>
{% endblock %}